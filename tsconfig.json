{
    "compilerOptions": {
      "target": "es2015", // or "es6"
      "lib": ["es2015", "dom"], // Include necessary libraries
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "downlevelIteration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }